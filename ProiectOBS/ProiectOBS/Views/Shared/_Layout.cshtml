<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ProiectOBS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/header&footer.css" asp-append-version="true">
    <link rel="stylesheet" href="~/ProiectOBS.styles.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-4Q/uObzmNnhePQDmCz7M1mMNK9XbU6eBp6ZwL6OGhjbPjCtDni7drGpWlOb8MFtL3Qg/2rZbOx1hi8lzvvtFyQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light header bg-purple border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand me-3 text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 34px; height: 60px;">
                    <img src="https://cdn-icons-png.flaticon.com/512/285/285850.png?w=826&t=st=1683727461~exp=1683728061~hmac=d6dcaa4c0cb80fd2b29fc1ae1e617deee59f630d561875b3819a309dcc6846d2" alt="bank logo" style="height: 60px;"> <!-- FSFS logo image -->
                    Bank
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="" style="font-size: 24px; ">Homepage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Transactions" asp-action="Transactions" style="font-size: 24px;">Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Help" asp-action="Help" style="font-size: 24px;">Help</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 24px;">
                                <i class="fas fa-user"></i> <!-- Account -->
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Log In</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Create Account</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Account Settings</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["ErrorMessage"] != null)
            {
                <!-- Display error message if there is one -->
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white">
        <div class="container">
            &copy;2023 spycrah Music. Proiect Online Banking System (OBS). All rights reserved. - <a asp-area="" asp-controller="Help" asp-action="Help" style="color: ghostwhite;">Help</a> - <a asp-area="" asp-controller="Home" asp-action="Index" style="color: ghostwhite;">Homepage</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>