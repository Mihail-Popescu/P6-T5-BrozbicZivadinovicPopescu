
@{
    ViewData["Title"] = "SignUp";
}

@{
    Layout = null;
}
<link rel="stylesheet" href="/css/Signin.css">


<body>
    <div class="container">
        <form>
            <h1>Create Account</h1>
            <input type="text" id="name" name="name" placeholder="FirstName" required><br><br>
            <input type="text" id="lastname" name="lastname" placeholder="LastName" required><br><br>
            <input type="text" id="username" name="username" placeholder="Username" required><br><br>
            <input type="Number" id="phone" name="phone" placeholder="PhoneNumber" required><br><br>
            <input type="email" id="email" name="email" placeholder="Email" required><br><br>
            <input type="password" id="password" name="password" placeholder="Password" required><br><br>
            <button>Submit</button>
        </form>
    </div>
</body>

<style>
    body {
        background-image: url("/Pictures/login_pozadina.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
</style>