@model Client

<head>
    <title>Transactions</title>
    <link rel="stylesheet" type="text/css" href="~/css/transactions.css" />
    <script> </script>
</head>

<div>
    <h2>Account Balance:  @Model.Balance </h2>
</div>
<div>
    <h2>Deposit</h2>
    <button id="depositBtn">Deposit</button>
    <form id="depositForm" style="display:none;" action="/Transactions/Deposit" method="post">
        <label for="depositAmount">Amount:</label>
        <input type="number" id="depositAmount" name="depositAmount"><br>
        <button type="submit">Submit</button>
        <button type="button" id="cancelDepositBtn">Cancel</button>
    </form>
</div>

<div>
    <h2>Withdraw</h2>
    <button id="withdrawBtn">Withdraw</button>
    <form id="withdrawForm" style="display:none;" action="/Transactions/Withdraw" method="post">
        <label for="withdrawBank">Bank:</label>
        <input type="text" id="withdrawBank" name="withdrawBank"><br>
        <label for="withdrawAmount">Amount:</label>
        <input type="number" id="withdrawAmount" name="withdrawAmount"><br>
        <button type="submit">Submit</button>
        <button type="button" id="cancelWithdrawBtn">Cancel</button>
    </form>
</div>

<div>
    <h2>Transfer</h2>
    <button id="transferBtn">Transfer</button>
    <form id="transferForm" style="display:none;" action="/Transactions/Transfer" method="post">
        <label for="transferRecipient">Recipient:</label>
        <input type="text" id="transferRecipient" name="transferRecipient"><br>
        <label for="transferIBAN">IBAN:</label>
        <input type="number" id="transferIBAN" name="transferIBAN"><br>
        <label for="transferAmount">Amount:</label>
        <input type="number" id="transferAmount" name="transferAmount"><br>
        <button type="submit">Submit</button>
        <button type="button" id="cancelTransferBtn">Cancel</button>
    </form>
</div>

<script>
    const depositBtn = document.getElementById("depositBtn");
    const depositForm = document.getElementById("depositForm");
    const cancelDepositBtn = document.getElementById("cancelDepositBtn");
    const withdrawBtn = document.getElementById("withdrawBtn");
    const withdrawForm = document.getElementById("withdrawForm");
    const cancelWithdrawBtn = document.getElementById("cancelWithdrawBtn");
    const transferBtn = document.getElementById("transferBtn");
    const transferForm = document.getElementById("transferForm");
    const cancelTransferBtn = document.getElementById("cancelTransferBtn");

    depositBtn.addEventListener("click", function () {
        depositForm.style.display = "block";
    });

    cancelDepositBtn.addEventListener("click", function () {
        depositForm.style.display = "none";
    });

    withdrawBtn.addEventListener("click", function () {
        withdrawForm.style.display = "block";
    });

    cancelWithdrawBtn.addEventListener("click", function () {
        withdrawForm.style.display = "none";
    });

    transferBtn.addEventListener("click", function () {
        transferForm.style.display = "block";
    });

    cancelTransferBtn.addEventListener("click", function () {
        transferForm.style.display = "none";
    });
</script>